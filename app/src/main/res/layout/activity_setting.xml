<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_background_start">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#50ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/head_setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_head_start" />

    <TextView
        android:id="@+id/message_setting"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="03170****"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/head_setting"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <Button
            android:id="@+id/return_setting"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_button"
            android:text="返回"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/exit_login_setting"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/ic_button"
            android:text="退出登录"
            app:layout_constraintBottom_toBottomOf="@+id/return_setting"
            app:layout_constraintEnd_toStartOf="@+id/return_setting"
            app:layout_constraintTop_toTopOf="@+id/return_setting" />

        <Button
            android:id="@+id/exit_game_setting"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/ic_button"
            android:text="退出游戏"
            app:layout_constraintBottom_toBottomOf="@+id/return_setting"
            app:layout_constraintStart_toEndOf="@+id/return_setting"
            app:layout_constraintTop_toTopOf="@+id/return_setting" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>