<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_background_start">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#50ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/head_details"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_head_start" />

    <TextView
        android:id="@+id/message_details"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="03170****"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/head_details"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <ImageView
            android:id="@+id/rank_background_rank"
            android:layout_width="450dp"
            android:layout_height="300dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_background_rank" />

        <Button
            android:id="@+id/return_details"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_button"
            android:text="返回"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="对局详情"
            android:textColor="#F7B151"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/rank_background_rank"
            app:layout_constraintStart_toStartOf="@+id/rank_background_rank"
            app:layout_constraintTop_toTopOf="@+id/rank_background_rank" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="对局号"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/room_num_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="1000"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <ImageView
            android:id="@+id/detail_front_2"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:srcCompat="@drawable/poker_back" />

        <ImageView
            android:id="@+id/detail_mid_3"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/detail_front_2"
            app:srcCompat="@drawable/poker_back" />

        <ImageView
            android:id="@+id/detail_back_4"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_back_3"
            app:layout_constraintStart_toEndOf="@+id/detail_back_3"
            app:layout_constraintTop_toBottomOf="@+id/detail_mid_3"
            app:srcCompat="@drawable/poker_back" />

        <ImageView
            android:id="@+id/detail_back_5"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_back_3"
            app:layout_constraintStart_toEndOf="@+id/detail_back_4"
            app:layout_constraintTop_toBottomOf="@+id/detail_mid_3"
            app:srcCompat="@drawable/poker_back" />

        <ImageView
            android:id="@+id/detail_back_3"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="@+id/detail_mid_3"
            app:layout_constraintStart_toStartOf="@+id/detail_mid_3"
            app:layout_constraintTop_toBottomOf="@+id/detail_mid_3"
            app:srcCompat="@drawable/poker_back" />

        <ImageView
            android:id="@+id/detail_back_2"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_back_3"
            app:layout_constraintEnd_toStartOf="@+id/detail_back_3"
            app:layout_constraintTop_toBottomOf="@+id/detail_mid_3"
            app:srcCompat="@drawable/poker_back" />

        <ImageView
            android:id="@+id/detail_back_1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_back_3"
            app:layout_constraintEnd_toStartOf="@+id/detail_back_2"
            app:layout_constraintTop_toBottomOf="@+id/detail_mid_3"
            app:srcCompat="@drawable/poker_back" />

        <ImageView
            android:id="@+id/detail_mid_1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_mid_2"
            app:layout_constraintEnd_toStartOf="@+id/detail_mid_2"
            app:layout_constraintTop_toTopOf="@+id/detail_mid_2"
            app:srcCompat="@drawable/poker_back" />

        <ImageView
            android:id="@+id/detail_mid_4"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_mid_3"
            app:layout_constraintStart_toEndOf="@+id/detail_mid_3"
            app:layout_constraintTop_toBottomOf="@+id/detail_front_2"
            app:srcCompat="@drawable/poker_back" />

        <ImageView
            android:id="@+id/detail_mid_5"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_mid_3"
            app:layout_constraintStart_toEndOf="@+id/detail_mid_4"
            app:layout_constraintTop_toBottomOf="@+id/detail_front_2"
            app:srcCompat="@drawable/poker_back" />

        <ImageView
            android:id="@+id/detail_mid_2"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_mid_3"
            app:layout_constraintEnd_toStartOf="@+id/detail_mid_3"
            app:layout_constraintTop_toBottomOf="@+id/detail_front_2"
            app:srcCompat="@drawable/poker_back" />

        <ImageView
            android:id="@+id/detail_front_1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_front_2"
            app:layout_constraintEnd_toStartOf="@+id/detail_front_2"
            app:layout_constraintTop_toTopOf="@+id/detail_front_2"
            app:srcCompat="@drawable/poker_back" />

        <ImageView
            android:id="@+id/detail_front_3"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_front_2"
            app:layout_constraintStart_toEndOf="@+id/detail_front_2"
            app:layout_constraintTop_toTopOf="@+id/detail_front_2"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/poker_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rank_background_rank"
            app:layout_constraintStart_toStartOf="@+id/rank_background_rank">

            <Button
                android:id="@+id/detail_player_1"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_button"
                android:text="玩家1"
                android:textColor="#000000"
                android:textSize="10sp" />

            <Button
                android:id="@+id/detail_player_2"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_button"
                android:text="玩家2"
                android:textColor="#000000"
                android:textSize="10sp" />

            <Button
                android:id="@+id/detail_player_3"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_button"
                android:text="玩家3"
                android:textColor="#000000"
                android:textSize="10sp" />

            <Button
                android:id="@+id/detail_player_4"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_button"
                android:text="玩家4"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/rank_background_rank"
            app:layout_constraintStart_toStartOf="@+id/rank_background_rank"
            app:layout_constraintTop_toBottomOf="@+id/detail_back_3">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="score:  " />

            <TextView
                android:id="@+id/detail_score"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" " />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>