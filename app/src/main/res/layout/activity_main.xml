<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_main"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/login_main"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/ic_button"
        android:text="登录"
        app:layout_constraintBottom_toBottomOf="@+id/register_main"
        app:layout_constraintEnd_toStartOf="@+id/register_main"
        app:layout_constraintTop_toTopOf="@+id/register_main" />

    <Button
        android:id="@+id/register_main"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/ic_button"
        android:text="注册"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/exit_main"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginStart="64dp"
        android:background="@drawable/ic_button"
        android:text="退出游戏"
        app:layout_constraintBottom_toBottomOf="@+id/register_main"
        app:layout_constraintStart_toEndOf="@+id/register_main"
        app:layout_constraintTop_toTopOf="@+id/register_main" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>